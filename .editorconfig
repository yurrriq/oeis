root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[docs/**/*]
indent_style = unset
insert_final_newline = unset
end_of_line = unset

[Makefile]
indent_style = tab

[VERSION]
insert_final_newline = false
